{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the catalog.",
      "properties": {
        "productTitle": {
          "type": "string",
          "description": "Name of the product."
        },
        "productDescription": {
          "type": "string",
          "description": "Detailed description of the product."
        },
        "price": {
          "type": "number",
          "description": "Price of the product."
        },
        "productImages": {
          "type": "array",
          "description": "URLs of the product's main images.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalImages": {
          "type": "array",
          "description": "URLs of additional product images.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "specifications": {
          "type": "string",
          "description": "Technical specifications of the product."
        },
        "attributes": {
          "type": "object",
          "description": "Product attributes like color, material, etc.",
          "properties": {
            "color": { "type": "string" },
            "material": { "type": "string" },
            "size": { "type": "string" },
            "brand": { "type": "string" },
            "pattern": { "type": "string" },
            "texture": { "type": "string" }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "productTitle",
        "price",
        "productImages",
        "attributes",
        "createdAt",
        "updatedAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
