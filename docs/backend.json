{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the catalog.",
      "properties": {
        "productCode": {
          "type": "string",
          "description": "The unique code for the product (e.g., SKU)."
        },
        "productTitle": {
          "type": "string",
          "description": "Name of the product."
        },
        "productDescription": {
          "type": "string",
          "description": "Detailed description of the product."
        },
        "price": {
          "type": "number",
          "description": "Price of the product."
        },
        "productImages": {
          "type": "array",
          "description": "URLs of the product's main images.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalImages": {
          "type": "array",
          "description": "URLs of additional product images.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "specifications": {
          "type": "string",
          "description": "Technical specifications of the product."
        },
        "attributes": {
          "type": "object",
          "description": "Product attributes like color, material, etc.",
          "properties": {
            "color": { "type": "string" },
            "material": { "type": "string" },
            "size": { "type": "string" },
            "brand": { "type": "string" },
            "pattern": { "type": "string" },
            "texture": { "type": "string" }
          }
        },
        "status": {
            "type": "string",
            "description": "The publishing status of the product.",
            "enum": ["Draft", "Published"]
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "productCode",
        "productTitle",
        "price",
        "productImages",
        "attributes",
        "status",
        "createdAt",
        "updatedAt"
      ]
    },
    "User": {
        "$schema": "http://json-schema.org/draft-07/schema#",
        "title": "User",
        "type": "object",
        "description": "Represents a user of the system.",
        "properties": {
            "name": { "type": "string", "description": "The user's full name." },
            "email": { "type": "string", "format": "email", "description": "The user's email address." },
            "role": { "type": "string", "description": "The user's role.", "enum": ["Admin", "Editor", "Customer"] },
            "createdAt": { "type": "string", "format": "date-time" },
            "lastLogin": { "type": "string", "format": "date-time" }
        },
        "required": ["name", "email", "role", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "users/{userId}",
        "definition": {
            "schema": { "$ref": "#/entities/User" },
            "description": "Stores user profiles."
        }
      },
      {
        "path": "retailers/wallpapers/products/{productId}",
