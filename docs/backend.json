{
  "entities": {
    "Product": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Product",
      "type": "object",
      "description": "Represents a product in the catalog.",
      "properties": {
        "productTitle": {
          "type": "string",
          "description": "Name of the product."
        },
        "productDescription": {
          "type": "string",
          "description": "Detailed description of the product."
        },
        "price": {
          "type": "number",
          "description": "Price of the product."
        },
        "productImages": {
          "type": "array",
          "description": "URLs of the product's main images.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "additionalImages": {
          "type": "array",
          "description": "URLs of additional product images.",
          "items": {
            "type": "string",
            "format": "uri"
          }
        },
        "specifications": {
          "type": "string",
          "description": "Technical specifications of the product."
        },
        "attributes": {
          "type": "object",
          "description": "Product attributes like color, material, etc.",
          "properties": {
            "color": { "type": "string" },
            "material": { "type": "string" },
            "size": { "type": "string" },
            "brand": { "type": "string" },
            "pattern": { "type": "string" },
            "texture": { "type": "string" }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "productTitle",
        "price",
        "productImages",
        "attributes",
        "createdAt",
        "updatedAt"
      ]
    },
    "Category": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Category",
      "type": "object",
      "description": "Represents a category of products.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the category."
        },
        "name": {
          "type": "string",
          "description": "Name of the category."
        },
        "description": {
          "type": "string",
          "description": "Description of the category."
        },
        "imageUrl": {
          "type": "string",
          "description": "URL of the category's image.",
          "format": "uri"
        }
      },
      "required": [
        "id",
        "name",
        "description",
        "imageUrl"
      ]
    },
    "Attribute": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Attribute",
      "type": "object",
      "description": "Represents a product attribute (e.g., color, size) and its possible values.",
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the attribute."
        },
        "values": {
          "type": "array",
          "description": "A list of possible values for the attribute.",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "name",
        "values"
      ]
    },
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user of the admin dashboard.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user."
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user."
        },
        "role": {
          "type": "string",
          "description": "Role of the user (e.g., admin, editor).",
          "format": "enum",
          "items": {
            "type": "string"
          }
        }
      },
      "required": [
        "id",
        "email",
        "firstName",
        "lastName",
        "role"
      ]
    },
    "ShareLink": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "ShareLink",
      "type": "object",
      "description": "Represents a shareable link with a specific filter state.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the share link."
        },
        "link": {
          "type": "string",
          "description": "The generated shareable link.",
          "format": "uri"
        },
        "filterState": {
          "type": "string",
          "description": "JSON payload representing the filter state."
        },
        "expirationDate": {
          "type": "string",
          "description": "Date and time when the link expires.",
          "format": "date-time"
        },
        "createdBy": {
          "type": "string",
          "description": "Reference to User that created this link. (Relationship: User 1:N ShareLink)"
        }
      },
      "required": [
        "id",
        "link",
        "filterState",
        "expirationDate",
        "createdBy"
      ]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "wallpapers/{productId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Product"
          },
          "description": "Stores wallpaper products."
        }
      },
      {
        "path": "window-blinds/{productId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Product"
          },
          "description": "Stores window blind products."
        }
      },
      {
        "path": "wall-murals/{productId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Product"
          },
          "description": "Stores wall mural products."
        }
      },
      {
        "path": "carpets/{productId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Product"
          },
          "description": "Stores carpet products."
        }
      },
      {
        "path": "window-films/{productId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Product"
          },
          "description": "Stores window film products."
        }
      },
      {
        "path": "fluted-panels/{productId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Product"
          },
          "description": "Stores fluted panel products."
        }
      },
      {
        "path": "categories/{categoryId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Category"
          },
          "description": "Stores product categories."
        }
      },
      {
        "path": "attributes/{attributeId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/Attribute"
          },
          "description": "Stores product attributes (e.g., color, size)."
        }
      },
      {
        "path": "users/{userId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profiles."
        }
      },
      {
        "path": "users/{userId}/shareLinks/{shareLinkId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/ShareLink"
          },
          "description": "Stores shareable links created by users."
        }
      },
      {
        "path": "roles_admin/{userId}",
        "definition": {
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Indicates admin role for the user, existence-based access control."
        }
      }
    ]
  }
}
