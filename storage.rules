
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow read and write access for all authenticated users.
    // This is a permissive rule suitable for development or for apps where
    // all authenticated users are considered trusted (e.g., admin panels).
    // For production apps with untrusted users, you would implement
    // more granular rules.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
